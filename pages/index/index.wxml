<!--index.wxml-->
<swiper indicator-dots="true"
  autoplay="true" interval="2000" duration="0">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" 
        class="slide-image" 
        width="355" 
        height="150"
        data-index="{{index}}"
        bind:tap="handleClickBanner"/>
    </swiper-item>
  </block>
</swiper>
<view>
  <view wx:for="{{productList}}" bind:tap="handleClickProduct" data-index="{{index}}">
    {{item.title}}
  </view>
</view>
