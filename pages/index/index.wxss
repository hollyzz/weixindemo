swiper{
  height: 300rpx;
  width: 100%;
}

swiper  image {
  display: block;
  height: 100%;
  width: 100%;
}

.free-WaterfallFlow {
  margin: 10px auto;
  width: 94%;
  column-count: 2;
  /*column-count 属性规定元素应该被分隔的列数：*/
}

.free-WaterfallFlow .flex-wrap {
  display: inline-block;
  width: 98%;
  margin-bottom: 10px ;
  border: 1px solid #ccc;
  padding: 2%;
  padding-top: 5%;
  margin-right: 2%;
  box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
  text-align: center;
}

.flex-wrap image {
  width: 95%;
  margin: 0 auto;
}

.flex-wrap view {
  padding: 5px;
  color: #999;
}

